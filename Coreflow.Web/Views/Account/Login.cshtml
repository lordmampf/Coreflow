
@using Coreflow.Web.Models.AccountViewModels

@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="text-center form-container">
    <form asp-route-returnurl="@ViewData["ReturnUrl"]" class="form-signin" method="post">

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label for="Username" class="sr-only">Username</label>

        <input asp-for="Username" class="form-control" type="text" placeholder="Username" required autofocus />

        <label for="inputPassword" class="sr-only">Password</label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Password" required />

        <div class="checkbox mb-3">
            <label asp-for="RememberMe">
                <input asp-for="RememberMe" />
                @Html.DisplayNameFor(m => m.RememberMe)
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </form>
</div>