@model IEnumerable<FlowDefinition>

@{
    ViewData["Title"] = "Flow Definitions";
}

<h2>Flow Definitions</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
    
    <button id="btnUploadFlow" type="button" class="btn btn-primary">
        Upload flow
    </button>

</p>

<input id="inpUploadFlow" class="" type="file" accept=".flow" style="width: 0; height: 0; display: block" />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identifier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <i class="@item.Icon.GetIconClassName()"></i> @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Identifier)
                </td>
                <td>
                    @Html.ActionLink("Editor", "Editor", new { id = item.Identifier }) |
                    @Html.ActionLink("Delete", "DeleteFlow", new { id = item.Identifier })
                </td>
            </tr>
        }
    </tbody>
</table>
